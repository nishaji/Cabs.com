<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:background="#ffffff"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/car3"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:focusableInTouchMode="true"
            android:textColor="#ff0a0a0a"/>
        <EditText
            android:layout_marginLeft="9dp"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:hint="Which car do you drive ?"
            android:focusableInTouchMode="true"
            android:inputType="text"
            android:id="@+id/et1"
            android:maxLength="15"
            android:maxLines="1"
            android:singleLine="true"            />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0a0a0a"
            android:text="Model"
            android:focusableInTouchMode="true"

            />
        <EditText
            android:layout_marginLeft="9dp"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:hint="Enter model name"
            android:inputType="text"
            android:id="@+id/et2"
            android:maxLength="15"
            android:maxLines="1"
            android:singleLine="true" />
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0a0a0a"
            android:text="Color"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="10dp"/>
        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_marginLeft="9dp"
                android:minWidth="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/b1"
                    />
                <Button
                    android:id="@+id/btn11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:background="@drawable/b11"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/b2" />
                <Button
                    android:id="@+id/btn12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:background="@drawable/b12"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/b3" />
                <Button
                    android:id="@+id/btn13"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:background="@drawable/b13"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/b4" />
                <Button
                    android:id="@+id/btn14"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:background="@drawable/b14"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/b5" />
                <Button
                    android:id="@+id/btn15"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:background="@drawable/b15"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/b6" />
                <Button
                    android:id="@+id/btn16"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:background="@drawable/b16"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/b7" />
                <Button
                    android:id="@+id/btn17"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:background="@drawable/b17"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/b8" />
                <Button
                    android:id="@+id/btn18"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:background="@drawable/b18"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btn9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/b9" />
                <Button
                    android:id="@+id/btn19"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:background="@drawable/b19"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
                <Button

                    android:id="@+id/btn10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/b10" />
                <Button
                    android:id="@+id/btn20"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:background="@drawable/b20"
                    />
            </LinearLayout>
        </HorizontalScrollView>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            tools:context=".MainActivity"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:id="@+id/l1"
                android:orientation="horizontal"
                android:layout_height="58dp"
                android:layout_width="fill_parent">
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:focusable="true"
            >
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Number"
                android:textColor="#ff0a0a0a"
                android:focusableInTouchMode="true"
                />
        </LinearLayout>
        <EditText
            android:layout_marginLeft="9dp"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:hint="Enter your registration number"
            android:inputType="text"
            android:id="@+id/et4"
            android:layout_marginBottom="20dp"
            android:maxLength="15"
            android:maxLines="1"
            android:singleLine="true"            />
        <CheckBox
            android:layout_marginLeft="4dp"
            android:id="@+id/checkBox1"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="I here by certify that i own the car and all above details are valid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textColor="#01579B"
            android:textSize="16dp"/>

        <Button
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/btnsubmit"
            android:text=" Add Car"
            android:textStyle="italic"
            android:textSize="20dp"
            android:background="@drawable/btn4" />


    </LinearLayout>

</ScrollView>