<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="#99CC"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:id="@+id/trip_detail_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/fname" />

            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/licencelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lname"
                android:text="Licence No." />

            <TextView
                android:textSize="16dp"
                android:id="@+id/licence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lname"
                android:layout_toRightOf="@+id/licencelabel" />
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/phonelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/licence"
                android:text="Ph:"/>

            <TextView
                android:textSize="16dp"
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/licence"
                android:layout_toRightOf="@+id/phonelabel" />

            <ImageView
                android:id="@+id/drimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>