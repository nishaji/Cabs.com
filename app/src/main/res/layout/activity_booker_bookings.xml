<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"
            />
    </LinearLayout>
    <Button
        android:textColor="#fff"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:text="Pick up"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/pickup"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn4" />

    <ScrollView
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/pickup"
        android:layout_marginTop="70dp"
        android:id="@+id/ScrollView01"
        android:layout_height="135px"
        android:layout_width="wrap_content"
        android:scrollbars="horizontal|vertical">

        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView01"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:fadeScrollbars="false">

            <LinearLayout
                android:background="@drawable/pickupborder"
                android:id="@+id/LinearLayout02"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <TextView
                        android:background="@drawable/border"
                        android:textColor="#000"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:textStyle="italic"
                        android:id="@+id/pickuptext"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_toRightOf="@+id/pickup"
                        />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <Button
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="Drop"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/drop"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn4"
        android:layout_below="@+id/pickup"/>


    <ScrollView
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/pickup"
        android:layout_marginTop="130dp"
        android:id="@+id/ScrollView02"
        android:layout_height="135px"
        android:layout_width="wrap_content"
        android:scrollbars="horizontal|vertical">

        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView02"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:fadeScrollbars="false">

            <LinearLayout
                android:background="@drawable/pickupborder"
                android:id="@+id/LinearLayout03"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <TextView
                        android:background="@drawable/border"
                        android:textColor="#000"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="2dp"
                        android:textSize="16dp"
                        android:textStyle="italic"
                        android:id="@+id/droptext"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_toRightOf="@+id/drop"
                        />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
    <TextView
        android:background="#B2DFDB"
        android:textColor="#000"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:textStyle="italic"
        android:id="@+id/list"
        android:layout_width="360dp"
        android:layout_height="80dp"
        />
    <Button
        android:textColor="#fff"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="95dp"
        android:text="Go"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/go"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/btn4"
        />

</RelativeLayout>