<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="#99CC"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:id="@+id/booking_detail"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/drname"
                android:textSize="15dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/drname"
                android:layout_marginTop="12dp"
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:background="#000" />
            <TextView
                android:textSize="15dp"
                android:textColor="#000"
                android:textStyle="normal"
                android:id="@+id/carname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/carname"
                android:layout_marginTop="12dp"
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:background="#000" />
            <TextView
                android:textSize="15dp"
                android:textColor="#000"
                android:textStyle="normal"
                android:id="@+id/modelname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/modelname"
                android:layout_marginTop="12dp"
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:background="#000" />
            <TextView
                android:textSize="15dp"
                android:textColor="#000"
                android:textStyle="normal"
                android:id="@+id/rupay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:text="Date/Time :"
                android:textSize="15dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/bookingdatetime"
                />
            <TextView
                android:textSize="15dp"
                android:textColor="#000"
                android:textStyle="normal"
                android:id="@+id/bookingdatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:text="Pickup :"
                android:textSize="15dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/pickup"
                />
            <TextView
                android:textSize="15dp"
                android:textColor="#000"
                android:textStyle="normal"
                android:id="@+id/pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:text="Drop :"
                android:textSize="15dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/drop"
                />
            <TextView
                android:textSize="15dp"
                android:textColor="#000"
                android:textStyle="normal"
                android:id="@+id/drop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>